  <script>

    const myForm = document.getElementById("myForm")
    myForm.addEventListener("submit", async function (e) {
      e.preventDefault()
      const formData = new FormData(this);
      console.log(formData.get("textarea"))
      try {
        const requestOptions = {
          Credentials: 'include',
          method: 'POST',
          headers: {
            'Content-type': 'application/json'
          },
          body: JSON.stringify({
            text: formData.get("textarea")
          })
        }
        const response = await fetch(`/addcomments?id=${localStorage.getItem("question")}`, requestOptions);
        console.log("responseaddcomments", response)

        if (response.status == 200) {
